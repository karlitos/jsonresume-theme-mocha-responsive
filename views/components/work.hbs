{{#if resume.work.length}}
<div class="container work-container">
    {{> title value="Experience" icon="fas fa-user-tie"}}

    {{#each resume.work}}
        <section class="item">
            {{> section-header name=this.company }}

            {{#if position}}
            <h4>{{position}}</h4>
            {{/if}}

            {{#if summary}}
            <p class="summary">{{{mdToHtml summary}}}</p>
            {{/if}}

            {{#if highlights.length}}
            <ul>
                {{#each highlights}}
                <li>{{.}}</li>
                {{/each}}
            </ul>
            {{/if}}
        </section>
    {{/each}}
</div>
{{/if}}
